<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.makram.libgen" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_libgen"
        android:label="@string/app_name"
        android:theme="@style/LibGen" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultsActivity"
            android:label="@string/title_activity_results"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.makram.libgen.MainActivity" />
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".ResultsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.makram.libgen.ResultsActivity" />
        </activity>
    </application>

</manifest>
